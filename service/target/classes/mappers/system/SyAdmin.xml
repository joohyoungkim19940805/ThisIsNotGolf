<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SyAdmin">

	<select id="getAdminById" parameterType="int" resultType="com.radcns.decaplus_springboot_service.dto.system.SyAdminDto">
		/* SyAdmin.getAdminById - 아이디로 관리자 계정 정보 조회	**/
		SELECT	ID
				, NAME
		FROM	ACCOUNT
		WHERE	ID = #{id}
	</select>
	
	<select id="searchAdminList" parameterType="map" resultType="com.radcns.decaplus_springboot_service.dto.system.SyAdminDto">
		SELECT	ID
				, NAME
		FROM	ACCOUNT
		ORDER BY ID ASC
		LIMIT 	10 OFFSET 0
	</select>
	
	<select id="searchAdminList-count" parameterType="map" resultType="com.radcns.decaplus_springboot_service.dto.system.SyAdminDto">
		SELECT	COUNT(1)
		FROM	ACCOUNT;
	</select>

</mapper>